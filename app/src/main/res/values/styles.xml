<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="pay_common_button_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30px</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DropDownDown">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out</item>
    </style>

    <style name="DropDownUp">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>

    <declare-styleable name="CircleProgress">

        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="rectangleText" format="string" />
        <attr name="tipText" format="string" />
        <attr name="centerText" format="string" />

    </declare-styleable>

    <declare-styleable name="ArcStyle">


    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>
    <declare-styleable name="FlowLayoutAttrs">

        <attr name="horizontalSpacing"/>

        <attr name="verticalSpacing"/>

        <attr name="itemSize"/>

        <attr name="itemColor"/>

        <attr name="backgroundResource"/>

        <attr name="textPaddingH"/>

        <attr name="textPaddingV"/>

    </declare-styleable>

</resources>
