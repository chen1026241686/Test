<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="/" />

        <TextView
            android:id="@+id/tvRecordedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/slash"
            android:text="00:38" />

        <TextView
            android:id="@+id/tvRecordMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/slash"
            android:text="01:00" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px">


        <com.example.customview.view.CircleText
            android:id="@+id/restartRecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:textContent="重录" />

        <ImageView
            android:id="@+id/imgRecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/start" />


        <com.example.customview.view.CircleText
            android:id="@+id/recordDone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:textContent="完成" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvRecordStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="播放/暂停" />

</LinearLayout>